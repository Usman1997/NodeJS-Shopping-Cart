
{{# if products}}
    <div class="row">
        <div class="col-sm-6 col-md-offset-4">
            <ul class="list-group">
         {{# each products}}
                <li class="list-group-item">

                    <span class="badge">{{this.qty}}</span>
                    <strong>{{this.item.title}}</strong>
                    <span class="label label-success">{{this.price}}</span>
                    <div class="btn-group">
                        <button class="btn btn-default btn-sm btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Action <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="/reduceByOne/{{this.item._id}}">Reduce by 1</a></li>
                            <li><a href="/removeItem/{{this.item._id}}">Reduce All</a></li>
                        </ul>
                    </div>
                </li>
{{/each}}
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6 col-md-offset-4">
            <strong>Total:{{totalPrice}}</strong>
        </div>
    </div>
<hr>
    <div class="row">
        <div class="col-sm-6 col-md-offset-4">
            <a href="/checkout"><button class="btn btn-success">Checkout</button></a>
        </div>
    </div>
    {{else}}
    <div class="row">
        <div class="col-sm-6 col-md-offset-4">
            <h4>No Item in the cart!</h4>
        </div>
    </div>
    {{/if}}


